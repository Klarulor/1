<Window x:Class="Task2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Title="Login" Height="165" Width="250">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Width="100">
            <Label HorizontalAlignment="Center">Log in</Label>
            <TextBox Name="EmailTextBox" GotFocus="EmailTextBox_OnGotFocus">email</TextBox>
            <PasswordBox Name="PasswordTextBox" GotFocus="PasswordTextBox_OnGotFocus" Margin="0 5 0 0 "></PasswordBox>
            <Button Click="LoginButton_OnClick" Margin="0 8 0 0">Login</Button>
            <Label Name="StatusLabel" Margin="0 8 0 0" Foreground="Red"></Label>
        </StackPanel>
    </Grid>
</Window>
