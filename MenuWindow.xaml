<Window x:Class="Task2.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Task2"
        mc:Ignorable="d"
        Title="MenuWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Button Margin="5 0 0 0" Padding="5 0 5 0" Click="OnNavBarTeacherButtonClicked">Teachers</Button>
                <Button Margin="5 0 0 0" Padding="5 0 5 0" Click="OnNavBarStudentsButtonClicked">Students</Button>
                <Button Margin="5 0 0 0" Padding="5 0 5 0" Click="OnNavBarTestsButtonClicked">Tests</Button>
            </StackPanel>
            <Grid Name="MainGrid"> </Grid>
        </StackPanel>
    </Grid>
</Window>
