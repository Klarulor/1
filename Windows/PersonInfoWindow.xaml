<Window x:Class="Task2.Windows.PersonInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Task2.Windows"
        mc:Ignorable="d"
        Title="PersonInfoWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Name="PersonIdLabel">Person id: 0</Label>
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical">
                    <Label>Firstname: </Label>
                    <Label>Lastname: </Label>
                    <Label>Email: </Label>
                    <Label>Phone: </Label>
                    <Label>Age: </Label>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <TextBox Name="FirstNameTextBox" Margin="0 6 0 0" Width="125"></TextBox>
                    <TextBox Name="LastNameTextBox" Margin="0 7 0 0"></TextBox>
                    <TextBox Name="EmailTextBox" Margin="0 8 0 0"></TextBox>
                    <TextBox Name="PhoneTextBox" Margin="0 8 0 0"></TextBox>
                    <TextBox Name="AgeTextBox" Margin="0 8 0 0"></TextBox>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Name="InteractionButton" Click="OnInteractionButtonClicked"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
